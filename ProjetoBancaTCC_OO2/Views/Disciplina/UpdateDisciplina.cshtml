@model BancaTCC.core.Disciplina
@{
    ViewBag.Title = "UpdateDisciplina";
}

<h2>UpdateDisciplina</h2>
<div class="panel">
    <form action="~/Disciplina/UpdateDisciplina" method="post">
        <div class="form-group">
            <label>Id</label>
            <input class="form-control" type="number" id="Id" name="Id" value="@Model.id" />
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input class="form-control" type="text" id="Nome" name="Nome" value="@Model.nome" />
        </div>

        <button type="submit" class="btn btn-default">Atualizar Disciplina</button>
    </form>
</div>