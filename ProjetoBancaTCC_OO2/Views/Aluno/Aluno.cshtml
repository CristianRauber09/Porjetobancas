@model IEnumerable<BancaTCC.core.Aluno>
@{
    ViewBag.Title = "Alunos";
}

<h2>Alunos</h2>
<a class="btn btn-primary" href="~/Aluno/CreateAluno">Adicionar Aluno</a>
<table class="table table-responsive table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Id</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.nome</th>
            <th>@item.id</th>
            <th><a class="btn btn-warning" href="~/Aluno/UpdateAluno/@item.id">Atualizar</a></th>
            <th><a class="btn btn-danger" href="~/Aluno/DeleteAluno/@item.id">Deletar</a></th>
        </tr>
    }
</table>
